
@{
    ViewBag.Title = @Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre : @Model.Genre.Name</li>
    <li>Release Date : @Model.ReleasedDate.ToString("MM/dd/yyyy")</li>
    <li>Date Added : @Model.DateAdded.ToString("MM/dd/yyyy")</li>
    <li>Number in Stocks : @Model.NumberInStock</li>

</ul>

